{% extends 'base.html.twig' %}

{% block title %}Detalles del Empleado{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Detalles del Empleado</h1>
        <div>
            <a href="{{ path('app_employee_index') }}" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
            <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i> Editar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informaci√≥n Personal</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th style="width: 30%">ID</th>
                                <td>{{ employee.id }}</td>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <td>{{ employee.name }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>
                                    <a href="mailto:{{ employee.email }}">{{ employee.email }}</a>
                                </td>
                            </tr>
                            <tr>
                                <th>Puesto</th>
                                <td>{{ employee.position }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Proyectos Asignados</h5>
                </div>
                <div class="card-body">
                    {% if employee.projects|length > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for project in employee.projects %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ project.name|default('Proyecto - ' ~ project.nameProject) }}
                                    <span class="badge bg-primary rounded-pill"> ID {{ project.id }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted text-center my-4">
                            <i class="bi bi-clipboard-x d-block fs-3 mb-2"></i>
                            Este empleado no tiene proyectos asignados
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-end mt-3">
        {{ include('employee/_delete_form.html.twig') }}
    </div>
{% endblock %}
